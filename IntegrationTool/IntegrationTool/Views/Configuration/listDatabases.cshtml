<div>
    <br />
    <feedback type=typeMessage message=message></feedback>


    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="col-md-10 col-md-offset-1">
        <h1>
            List Databases
        </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-cog"></i> Configuration</li>
            <li class="breadcrumb-item active"> List Databases</li>
        </ol>
        </div>
    </section>
    
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">


          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Databases</h3>
              <a href="/#/main/configuration/formDatabase/-1" class="pull-right btn btn-xs btn-success">Add</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive">
              <table id="datatable" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Ip</th>
                  <th>Port</th>
                  <th>Instance</th>
                  <th>Name</th>
                  <th>Username</th>
                  <th>Password</th>
                  <th>Engine</th>
                  <th>Options</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="database in listDatabases">
                    <td>{{database.Ip}}</td>
                    <td>{{database.Port}}</td>
                    <td>{{database.Instance}}</td>
                    <td>{{database.Name}}</td>
                    <td>{{database.Username}}</td>
                    <td>{{database.Password}}</td>
                    <td>{{database.Engine.Name}}</td>
                    <td>
                        <div ng-controller="AlertController">
                            <button class="btn btn-xs btn-success" ng-click="editDatabase(database.DatabaseParametersId)">Edit</button> 
                            <button class="btn btn-xs btn-danger" sweetalert sweet-options="{{sweet.option}}" sweet-on-confirm="deleteDatabase(database.DatabaseParametersId)" sweet-on-cancel="return">Delete</button>
                        </div>
                    </td>
                </tr>
                </tbody>
                <tfoot>
                <tr>
                  <th>Ip</th>
                  <th>Port</th>
                  <th>Instance</th>
                  <th>Name</th>
                  <th>Username</th>
                  <th>Password</th>
                  <th>Engine</th>
                  <th>Options</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>