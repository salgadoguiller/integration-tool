<div ngController="ConfigurationFlatFilesController">
    <br />
    <feedback type=typeMessage message=message></feedback>

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="col-md-10 col-md-offset-1">
        <h1>
          Configuration Flat Files
        </h1>
        <ol class="breadcrumb">
          <li><a><i class="fa fa-dashboard"></i> Configuration</a></li>
          <li class="active">Flat Files</li>
        </ol>
      </div>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-10 col-md-offset-1">
          <!-- general form elements -->
          <div class="box box-danger">
            <div class="box-header with-border">
              <h3 class="box-title">Form</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form name="form" role="form" ng-submit="sendRequest(request, form)" novalidate>
              <div class="box-body">
                <div class="form-group">
                  <label for="Location">Location</label>
                  <input type="text" ng-model="request.Location" class="form-control" id="Location" name="Location" placeholder="Enter Location" required>
                  <div ng-if="form.Location.$touched || form.$submitted">
                    <div ng-messages="form.Location.$error" role="alert">
                        <div class="help-block error-text" ng-message="required">* Location is required.</div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer" ng-controller="AlertController">
                <button type="button" class="btn btn-primary" sweetalert sweet-options="{{sweet.option}}" sweet-on-confirm="$parent.form.$submitted = true; sendRequest(request, form)" sweet-on-cancel="return">Submit</button>
              </div>
            </form>
          </div>
          <!-- /.box -->
        </div>
      </div>
    </section>
   <!-- /.content -->
</div>