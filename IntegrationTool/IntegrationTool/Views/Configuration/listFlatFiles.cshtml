<div>
    <br />
    <feedback type=typeMessage message=message></feedback>

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="col-md-10 col-md-offset-1">
        <h1>
            List Flat Files
        </h1>
        <ol class="breadcrumb">
            <li><a><i class="fa fa-dashboard"></i> Configuration</a></li>
            <li class="active">List Flat Files</li>
        </ol>
        </div>
    </section> 
    
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">


          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Flat Files</h3>
                <a href="/#/Configuration/formFlatFile/-1" class="pull-right btn btn-xs btn-success">Add</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Location</th>
                  <th>Options</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="flatFile in listFlatFiles">
                  <td>{{flatFile.Location}}</td>                  
                  <td>
                    <div ng-controller="AlertController">
                        <button class="btn btn-xs btn-success" ng-click="editFlatFile(flatFile.FlatFileParametersId)">Edit</button> 
                        <button class="btn btn-xs btn-danger" sweetalert sweet-options="{{sweet.option}}" sweet-on-confirm="deleteFlatFile(flatFile.FlatFileParametersId)" sweet-on-cancel="return">Delete</button>
                    </div>
                  </td>
                </tr>
                </tbody>
                <tfoot>
                <tr>
                  <th>Location</th>                 
                  <th>Options</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>



