<div>
    <br />
    <feedback type=typeMessage message=message></feedback>

    <section class="content-header">
        <div class="col-md-10 col-md-offset-1">
        <h1>
            Change Password {{name}}
        </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-cog"></i> {{name}}</li>
            <li class="breadcrumb-item active">Change Password</li>
        </ol>
        </div>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="box box-danger">
                    <div class="box-header with-border">
                        <h3 class="box-title">Form</h3>
                    </div>
                    <form name="form" role="form" ng-submit="sendRequest(request, form)" novalidate>
                        <div class="box-body">
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" name="Password" placeholder="Enter password" ng-model="request.Password" ng-required="true">
                                <div ng-if="form.Password.$touched || form.$submitted">
                                    <div ng-messages="form.Password.$error" role="alert">
                                        <div class="help-block error-text" ng-message="required">* Password is required.</div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>New Password</label>
                                <input type="password" class="form-control" name="NewPassword" placeholder="Enter new password" ng-model="request.NewPassword" ng-required="true">
                                <div ng-if="form.NewPassword.$touched || form.$submitted">
                                    <div ng-messages="form.NewPassword.$error" role="alert">
                                        <div class="help-block error-text" ng-message="required">* New password is required.</div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>New Password</label>
                                <input type="password" class="form-control" name="RepeatNewPassword" placeholder="Repeat new password" ng-model="request.RepeatNewPassword" ng-required="true">
                                <div ng-if="form.RepeatNewPassword.$touched || form.$submitted">
                                    <div ng-messages="form.RepeatNewPassword.$error" role="alert">
                                        <div class="help-block error-text" ng-message="required">* New password is required.</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer" ng-controller="AlertController">
                            <button type="button" class="btn btn-primary" sweetalert sweet-options="{{sweet.option}}" sweet-on-confirm="$parent.form.$submitted = true; sendRequest(request, form)" sweet-on-cancel="return">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>