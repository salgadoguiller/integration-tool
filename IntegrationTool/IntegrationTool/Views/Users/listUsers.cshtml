<div>
    <br />
    <feedback type=typeMessage message=message></feedback>

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="col-md-10 col-md-offset-1">
        <h1>
            Users
        </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-cog"></i>List Users</li>
        </ol>
        </div>
    </section>
    
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">


          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Users</h3>
              <a href="/#/main/users/formUser/-1" class="pull-right btn btn-xs btn-success">Add</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive">
              <table id="datatable" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Username</th>
                  <th>Email</th>
                  <th>User Type</th>
                  <th>Permissions</th>
                  <th>Status</th>
                  <th>Options</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="user in listUsers">
                    <td>{{user.Name}}</td>
                    <td>{{user.Username}}</td>
                    <td>{{user.Email}}</td>
                    <td>{{user.UsersType.Type}}</td>
                    <td><span ng-repeat="permission in user.Permissions"> {{permission.Resource.Name}}<br /></span></td>
                    <td>{{user.Status.Name}}</td>
                    <td>
                        <div ng-controller="AlertController">
                            <button class="btn btn-xs btn-success" ng-click="editUser(user.UserId)">Edit</button> 
                            <button ng-if="user.Status.Name == 'Enable'" class="btn btn-xs btn-danger" sweetalert sweet-options="{{sweet.option}}" sweet-on-confirm="disableUser(user.UserId)" sweet-on-cancel="return">Disable</button>
                            <button ng-if="user.Status.Name == 'Disable'" class="btn btn-xs btn-primary" sweetalert sweet-options="{{sweet.option}}" sweet-on-confirm="enableUser(user.UserId)" sweet-on-cancel="return">Enable</button>
                        </div>
                    </td>
                </tr>
                </tbody>
                <tfoot>
                <tr>
                  <th>Name</th>
                  <th>Username</th>
                  <th>Email</th>
                  <th>User Type</th>
                  <th>Permissions</th>
                  <th>Status</th>
                  <th>Options</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
