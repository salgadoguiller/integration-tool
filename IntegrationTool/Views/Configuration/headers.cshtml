<div ngController="ConfigurationHeadersController">
    <br />
    <feedback type=typeMessage message=message></feedback>

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="col-md-10 col-md-offset-1">
        <h1>
          Configuration Headers
        </h1>
        <ol class="breadcrumb">
          <li><a><i class="fa fa-dashboard"></i> Configuration</a></li>
          <li class="active">Headers</li>
        </ol>
      </div>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-10 col-md-offset-1">
          <!-- general form elements -->
          <div class="box box-danger">
            <div class="box-header with-border">
              <h3 class="box-title">Form</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form name="form" role="form" ng-submit="sendRequest(request, form)" novalidate>
              <div class="box-body">
                <div class="form-group">
                    <label>Query Type</label>
                    <select class="form-control select2" name="QueryType" style="width: 100%;" ng-model="request.QueryTypeId" required>
                        <option selected disabled value="">Select</option>
                        <option ng-repeat="queryType in QueriesType" value="{{queryType.QueryTypeId}}">{{queryType.Name}}</option>
                    </select>
                    <div ng-if="form.QueryType.$touched || form.$submitted">
                        <div ng-messages="form.QueryType.$error" role="alert">
                            <div class="help-block error-text" ng-message="required">* Query type is required.</div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                  <label for="HeaderName">Name</label>
                  <input type="text" class="form-control" id="HeaderName" name="HeaderName" placeholder="Enter Name" ng-model="request.Name" required>
                  <div role="information">
                    <div class="help-block">* Enter headers separated by <strong>|</strong>.</div>
                  </div>
                  <div ng-if="form.HeaderName.$touched || form.$submitted">
                    <div ng-messages="form.HeaderName.$error" role="alert">
                        <div class="help-block error-text" ng-message="required">* Name is required.</div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
          <!-- /.box -->
        </div>
      </div>
    </section>
    <!-- /.content -->
</div>